

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/unievent

# JWT Configuration
# REQUIRED: server will refuse to start if JWT_SECRET is missing.
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for links + CORS)
FRONTEND_URL=http://localhost:3000

# Password reset token expiry (minutes)
RESET_PASSWORD_EXPIRES_MINUTES=30

SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

SMTP_FROM=

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
